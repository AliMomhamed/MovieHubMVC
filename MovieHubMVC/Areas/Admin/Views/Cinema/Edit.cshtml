@model MovieHubMVC.Models.Cinema
@{
    ViewData["Title"] = "Edit Cinema";
}

<div class="container py-5" style="background-color:#f8f9fa; min-height:100vh;">
    <div class="card shadow-sm border-0 rounded-4 p-4 mx-auto" style="max-width:700px;">
        <h3 class="fw-semibold text-secondary mb-4">✏️ Edit Cinema</h3>

        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label class="form-label fw-medium">Cinema Name</label>
                <input asp-for="Name" class="form-control rounded-3" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-medium">Description</label>
                <textarea asp-for="Description" rows="3" class="form-control rounded-3"></textarea>
            </div>

            <div class="mb-3">
                <label class="form-label fw-medium">Current Image</label><br />
                <img src="@Model.ImageUrl" class="rounded-3 shadow-sm mb-2" style="width:120px; height:120px; object-fit:cover;" />
                <input asp-for="ImageFile" type="file" class="form-control rounded-3" />
            </div>

            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-primary rounded-pill px-4 me-2">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Back</a>
            </div>
        </form>
    </div>
</div>
