@model MovieHubMVC.Models.Category
@{
    ViewData["Title"] = "Add New Category";
}

<div class="container py-5" style="background-color:#f8f9fa; min-height:100vh;">
    <div class="card shadow-sm border-0 rounded-4 p-4 mx-auto" style="max-width:600px;">
        <h3 class="fw-semibold text-secondary mb-4">➕ Add New Category</h3>

        <form asp-action="Create">
            <div class="mb-3">
                <label class="form-label fw-medium">Category Name</label>
                <input asp-for="Name" class="form-control rounded-3" placeholder="Enter category name" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-primary rounded-pill px-4 me-2">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>
