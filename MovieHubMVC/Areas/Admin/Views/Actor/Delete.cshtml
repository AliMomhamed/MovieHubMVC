@model MovieHubMVC.Models.Actor
@{
    ViewData["Title"] = "Delete Actor";
}

<div class="container py-5" style="background-color:#f8f9fa; min-height:100vh;">
    <div class="card shadow-sm border-0 rounded-4 p-4 mx-auto" style="max-width:600px; text-align:center;">
        <h4 class="text-danger mb-3">⚠️ Are you sure you want to delete this actor?</h4>
        <img src="@Model.ImageUrl" alt="@Model.Name" class="rounded-circle mb-3" style="width:120px; height:120px; object-fit:cover;" />
        <h5 class="fw-semibold text-dark">@Model.Name</h5>
        <p class="text-muted">@Model.Bio</p>

        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger rounded-pill px-4 me-2">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Cancel</a>
        </form>
    </div>
</div>
