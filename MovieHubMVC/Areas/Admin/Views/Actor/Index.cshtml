@model IEnumerable<MovieHubMVC.Models.Actor>

@{
    ViewData["Title"] = "Actors";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Actors</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Management / Actors</li>
    </ol>

    <div class="mb-3">
        <a asp-area="Admin" asp-controller="Actor" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Actor
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Actors List
        </div>
        <div class="card-body table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Movies</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var actor in Model)
                {
                    <tr>
                        <td>@actor.Name</td>
                        <td>
                            @foreach(var movie in actor.Movies)
                            {
                                <span class="badge bg-success me-1">@movie.Name</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-area="Admin" asp-controller="Actor" asp-action="Edit" asp-route-id="@actor.Id" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-area="Admin" asp-controller="Actor" asp-action="Details" asp-route-id="@actor.Id" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-area="Admin" asp-controller="Actor" asp-action="Delete" asp-route-id="@actor.Id" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

