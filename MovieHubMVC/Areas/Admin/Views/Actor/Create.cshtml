@model MovieHubMVC.Models.Actor
@{
    ViewData["Title"] = "Add New Actor";
}

<div class="container py-5" style="background-color:#f8f9fa; min-height:100vh;">
    <div class="card shadow-sm border-0 rounded-4 p-4 mx-auto" style="max-width:700px;">
        <h3 class="fw-semibold text-secondary mb-4">➕ Add New Actor</h3>

    <div class="card shadow-sm mb-4">
        <div class="card-header">
            <i class="fas fa-user-plus me-1"></i>
            New Actor
        </div>
        <div class="card-body">
            <form asp-area="Admin" asp-controller="Actor" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Actor Name" />
                    <label asp-for="Name">Actor Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <textarea asp-for="Bio" class="form-control" placeholder="Bio"></textarea>
                    <label asp-for="Bio">Biography</label>
                </div>

                <div class="mb-3">
                    <label class="form-label">Actor Image</label>
                    <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                </div>

            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-primary rounded-pill px-4 me-2">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
