@model MovieHubMVC.Models.Actor
@{
    ViewData["Title"] = "Add New Actor";
}

<div class="container py-5" style="background-color:#f8f9fa; min-height:100vh;">
    <div class="card shadow-sm border-0 rounded-4 p-4 mx-auto" style="max-width:700px;">
        <h3 class="fw-semibold text-secondary mb-4">➕ Add New Actor</h3>

        <form asp-action="Create" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label fw-medium">Name</label>
                <input asp-for="Name" class="form-control rounded-3" placeholder="Enter actor name" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-medium">Bio</label>
                <textarea asp-for="Bio" rows="3" class="form-control rounded-3" placeholder="Short biography"></textarea>
                <span asp-validation-for="Bio" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-medium">Image</label>
                <input type="file" name="ImageFile" class="form-control rounded-3" id="imageInput" accept="image/*" />
                <img id="preview" class="mt-3 rounded-3 shadow-sm" style="width:120px; display:none;" />
            </div>

            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-primary rounded-pill px-4 me-2">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        const input = document.getElementById('imageInput');
        const preview = document.getElementById('preview');
        input.addEventListener('change', e => {
            const file = e.target.files[0];
            if (file) {
                preview.src = URL.createObjectURL(file);
                preview.style.display = 'block';
            }
        });
    </script>
}
